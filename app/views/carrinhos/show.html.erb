<h2>Carrinho de compras</h2>
	<table class="tabela-carrinho">
		<thead>
			<tr>
				<th width="100">Foto</th>
				<th>Título do produto</th>
				<th width="100">Quantidade</th>
				<th width="100">Valor</th>
				<th width="100">Total</th>
			</tr>
		</thead>
	</table>

	<% for item in session[:carrinho] %> 
		<% @produto = @produtos[item["produto_id"]] %>
		<li><%= @produto.nome %> - <%= item["quantidade"] %> - - <%= item["produto_preco"] %></li>
		<%= link_to "excluir", excluir_produto_path, :id => @produto, method: 'get' %>
		<hr>
	<% end %> 
	<%= link_to "Continuar comprando", "/"%>
	<br><br>
	<%= button_to "Finalizar_compra", finalizar_compras_path , :id => @produto.id, method: 'get' %>

		<br>
			Digite o CEP do endereço de entrega: 
			<input class="span2" id="calc_correios_cep" name="calc_correios[cep]" size="8" type="text" /> 				
			<select id="calc_correios_tipo" name="calc_correios[tipo]">
				<option value="sv">Prazo até 7 dias</option>
				<option value="pc">Prazo até 15 dias</option>
				<option value="expressa">Entrega grátis (verificar cidades atendidas)</option>
			</select>
				<input class="btn btn-info" id="calc_correios_submit" name="commit" type="submit" value="calcular &raquo;">
				<br>
			<b>Valor do frete:</b><br>
			
	<%= button_to "Limpar Carrinho de compras", excluir_carrinho_path %>
