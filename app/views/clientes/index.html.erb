<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

  <%= form_tag(buscar_cliente_path, :method => :get) do %>
    <%= text_field_tag 'search', nil, placeholder: 'Buscar...' %> 
    <%= submit_tag "Buscar"%>
  <% end %>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cep</th>
      <th>Fone</th>
      <th>Endereco</th>
      <th>Bairro</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>Numero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.cep %></td>
        <td><%= cliente.fone %></td>
        <td><%= cliente.endereco %></td>
        <td><%= cliente.bairro %></td>
        <td><%= cliente.cidade %></td>
        <td><%= cliente.estado %></td>
        <td><%= cliente.numero %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cliente', new_cliente_path %>
