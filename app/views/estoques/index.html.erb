<p id="notice"><%= notice %></p>

<h1>Estoques</h1>

<table>
  <thead>
    <tr>
      <th>Preco</th>
      <th>Saldo</th>
      <th>Produto</th>
      <th>Subcategoria</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estoques.each do |estoque| %>
      <tr>
        <td><%= estoque.preco %></td>
        <td><%= estoque.saldo %></td>
        <td><%= estoque.produto.nome %></td>
        <td><%= estoque.produto.subcategoriaproduto.nome %></td>
        <td><%= estoque.produto.subcategoriaproduto.categoriaproduto.nome %></td>
        <td><%= link_to 'Show', estoque %></td>
        <td><%= link_to 'Edit', edit_estoque_path(estoque) %></td>
        <td><%= link_to 'Destroy', estoque, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

